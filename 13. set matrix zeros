#approch 1 : brute force
# t.c : o((n*m)(n+m)) and s.c : O(1)

class Solution:
    def setZeroes(self, matrix: List[List[int]]) -> None:
        rows = len(matrix)
        cols = len(matrix[0])
        for i in range(rows):
            for j in range(cols):
                if matrix[i][j] == 0:
                    ind = i - 1
                    while ind >= 0:
                        if matrix[ind][j] != 0:
                            matrix[ind][j] = -1
                        ind -= 1
                    ind = i + 1
                    while ind < rows:
                        if matrix[ind][j] != 0:
                            matrix[ind][j] = -1
                        ind += 1
                    ind = j - 1
                    while ind >= 0:
                        if matrix[i][ind] != 0:
                            matrix[i][ind] = -1
                        ind -= 1
                    ind = j + 1
                    while ind < cols:
                        if matrix[i][ind] != 0:
                            matrix[i][ind] = -1
                        ind += 1
        for i in range(rows):
            for j in range(cols):
                if matrix[i][j] <= 0:
                    matrix[i][j] = 0
        return matrix
