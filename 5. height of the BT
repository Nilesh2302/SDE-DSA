class Solution:
    #Function to find the height of a binary tree.
    def rec(self,root,level,res):
        #it will help to backtrack
        if not root:
            return
        
        if len(res) == level:
            res.append(root.data)
        
        self.rec(root.left,level+1,res)
        self.rec(root.right,level+1,res)
    def height(self, root):
        res = []
        self.rec(root,0,res)
        return len(res)
